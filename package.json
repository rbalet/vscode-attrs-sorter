{
  "name": "vscode-sorting-attrs",
  "displayName": "Sorting HTML and Jade attributes",
  "description": "Sorting of the tag attributes in the specified order",
  "version": "1.0.0",
  "author": "RaphaÃ«l Balet (ultrastark.ch)",
  "publisher": "rbalet",
  "license": "MIT",
  "engines": {
    "vscode": "^1.9.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/rbalet/vscode-attrs-sorter/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/rbalet/vscode-attrs-sorter"
  },
  "keywords": [
    "html",
    "jade",
    "pug",
    "attributes",
    "sort"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:attrsSorter.execute",
    "onLanguage:html",
    "onLanguage:jade"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "attrsSorter.execute",
        "title": "Sorting HTML tag attributes (attrs-sorter)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AttrsSorter configuration",
      "properties": {
        "attrsSorter.order": {
          "type": "array",
          "default": [],
          "description": "An array of attributes in the correct order"
        }
      }
    }
  },
  "dependencies": {
    "posthtml-vscode-sorting-attrs": "^0.11.3",
    "posthtml-vscode-sorting-attrs-logic": "^1.0.0",
    "pug-lexer": "^3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.39",
    "@types/node": "7.0.5",
    "mocha": "^5.2.0",
    "posthtml": "^0.11.3",
    "vscode": "^1.0.3",
    "xo": "^0.23.0"
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "xo && mocha"
  },
  "xo": {
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [
        2,
        "never"
      ],
      "generator-star-spacing": [
        2,
        "after"
      ],
      "import/no-unresolved": 0
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
